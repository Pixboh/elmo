<div class="qing-group-instance" data-group-id="<%= node.item.id %>" data-inst-num="<%= instance.num %>"
  <% if instance.marked_for_destruction? %>style="display: none"<% end %>>

  <h2>
    <%= node.full_dotted_rank %>.
    <%= node.item.group_name %>
    <% if node.repeatable? && !read_only %>
      <a href="#" class="remove-instance"><i class="fa fa-close"></i></a>
    <% end %>
    <%= hint_popover(node.item.group_hint) %>
  </h2>

  <%= render("responses/answers/nodes", nodes: instance.nodes, inst_num: instance.num) %>
</div>
