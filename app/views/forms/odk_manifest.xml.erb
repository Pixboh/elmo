<% cache("#{@form.odk_download_cache_key}/#{@style}") do %><?xml version='1.0' encoding='UTF-8' ?>
  <manifest xmlns="http://openrosa.org/xforms/xformsManifest">
    <% unless @ifa.empty? %>
      <mediaFile>
        <filename>itemsets.csv</filename><%# This is the filename ODK will create on the device. %>
        <hash><%= @ifa.md5 %></hash>
        <downloadUrl><%= url_for_path(@ifa.path) %></downloadUrl>
      </mediaFile>
    <% end %>

    <% @questions.each do |q| %>
      <mediaFile>
        <filename><%= q.audio_prompt_content_type %>.csv</filename>
        <hash><%= Digest::MD5.file(q.audio_prompt.path).hexdigest %></hash>
        <downloadUrl>some path</downloadUrl>
      </mediaFile>
    <% end %>
  </manifest>
<% end %>
