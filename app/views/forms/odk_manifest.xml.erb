<% cache("#{@form.odk_download_cache_key}/#{@style}") do %><?xml version='1.0' encoding='UTF-8' ?>
  <manifest xmlns="http://openrosa.org/xforms/xformsManifest">
    <% unless @ifa.empty? %>
      <mediaFile>
        <filename>itemsets.csv</filename><%# This is the filename ODK will create on the device. %>
        <hash><%= @ifa.md5 %></hash>
        <downloadUrl><%= url_for_path(@ifa.path) %></downloadUrl>
      </mediaFile>
    <% end %>

    <% unless @questions.empty? %>
      <% @questions.each do |q| %>
        <% decorated_question = QuestionDecorator.decorate(q) %>
        <mediaFile>
          <filename><%= decorated_question.unique_audio_prompt_filename %></filename>
          <hash><%= decorated_question.audio_prompt_md5 %></hash>
          <downloadUrl>some path</downloadUrl>
        </mediaFile>
      <% end %>
    <% end %>
  </manifest>
<% end %>
